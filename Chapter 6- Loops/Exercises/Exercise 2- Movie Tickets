while True:
    age=int(input("What is your age?    "))
    if age < 3:
        print("Your ticket will be free! Enjoy the movie!")
        
    elif age ==3 or age <= 12:
        print("Your ticket will be $10! Enjoy the movie!")
        
    else:
        print("Your ticket will be $15! Enjoy the movie!")
        
    
